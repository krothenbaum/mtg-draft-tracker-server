extends layout

block content
	main
		section
			.container-fluid
				.row
					h1 Back on the trail
					p.lead Log in to continue tracking
				.row
					form(role='form', action="/login", method="post")
						.row
							label.form-icon(for='email')
								i.ms.ms-planeswalker.ms-2x
							input(type='text', name="email", placeholder='Email Address')
						.row
							label.form-icon(for='password')
								i.ss.ss-usg.ss-2x
							input(type='password', name="password", placeholder='Password')
						.row
							button.btn(type='submit') Submit
						.row
							.demo
								p Demo Account:
								P email: demo@demo.com
								p password: pass