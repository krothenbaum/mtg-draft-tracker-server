extends layout

block content
    header
    a.logo(href='/', data-scroll) MTG Draft Tracker
    nav.nav-collapse
      ul
        if (!user)
          li.menu-item.active
            a(href='/account', data-scroll) Create Account
        if (user)
          li.menu-item.active
            a(href='/dashboard', data-scroll) Dashboard
          li.menu-item
            a(href='/add-draft', data-scroll) Add Draft
          li.menu-item
            a(href='logout', data-scroll) Log Out

    main
        section
          h1 Register Page
          p.lead Say something worthwhile here.
          br
          form(role='form', action="/register", method="post")
            .form-row
              label(for='email') Email address:
              input(type='text', name="email", placeholder='Email Address')
            .form-row
              label(for='password') Passwrord:
              input(type='password', name="password", placeholder='Password')
            button(type='submit') Submit
            a(href='/')
              button(type="button") Cancel